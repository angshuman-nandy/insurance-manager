 <% @user = current_user %>
   <% @u_detail = @user.detail %>
<div class="container" >
  <h2 class="form-info">Companies</h2>
  <p class="text-style">this list displays all the available companies. this list is only for viewing, to select a company and buy a policy from a specific company , please visit <strong>Policy --> Add new policy</strong> </p><br><br>            
  <table class="table table-hover table-responsive">
    <thead class="thead-inverse">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @companies.each do |i| %>
      <tr>
        <td><%=i.name%></td>
        <td><%=i.description %></td>
        <td><%= link_to "plans", companies_companyShow_path(:id => i.id), :class => "btn btn-primary custom_btn_small" %></td>
         <% if @u_detail.admin == true %>
        <td><%= link_to "edit", edit_company_path(i), :class => "btn btn-primary custom_btn_small" %></td>
         <td><%= link_to 'Destroy', company_path(i),
              method: :delete,
              data: { confirm: 'Are you sure?' } , :class => "btn btn-primary custom_btn_small"%></td>
              <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
 <div class="container rounded_corners">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inputs rounded_corners">
    <%= f.input :email, required: false, autofocus: true, placeholder: 'example@domain.com'%>
    <%= f.input :password,placeholder: 'password',  required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation,placeholder: 'confirm password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", :class => "login_button" %>
  </div>
<% end %>
 <%= render "devise/shared/links" %>
</div>

<%= stylesheet_link_tag 'devise' %>

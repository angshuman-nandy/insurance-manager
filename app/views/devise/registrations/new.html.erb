<%= render 'head' %>
<div class="container" style="max-width: 50%; align-self: center; background-color: white;">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, placeholder: 'example@domain.com'%>
    <%= f.input :password,placeholder: 'password',  required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation,placeholder: 'confirm password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
 <%= render "devise/shared/links" %>
</div>
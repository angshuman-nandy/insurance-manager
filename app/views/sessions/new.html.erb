<div class="container">
  <div class="rows">
    <div class="col-md-7 col-sm-6 col-xs-12">
      <div class="inner cover" id="cover">
        <h1 class="cover-heading">Its Simple, Its Hastlefree</h1>
        <p class="lead">Manage your insurance policies. Buy, edit and view all your policies. Forget all the hastle of keeping track of poicies and missing premium dates. manage your policies better </p>
      </div>
    </div>
    <div class="col-md-4 col-sm-6 col-xs-12 box login_form">
      <h2>Log in</h2>
      <%= simple_form_for(:session, url: login_path) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: 'example@domain.com'%>
          <%= f.input :password, required: false, placeholder: 'password'%>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in" , :class => "login_button" %>
        </div>

      <% end %>
      <%= link_to "sign up", new_user_path, :class => "login_button" %>
    </div>
  </div>
</div>

<%= stylesheet_link_tag 'devise' %>
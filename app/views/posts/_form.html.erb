<h1 class="form-info">new post</h1>
<div class="container box-form">

<%= simple_form_for @post, remote: true do |f|   %>
  <%= f.input :title%>
  <%= f.input :text%>
  <%= f.input :user_id, input_html: {value: current_user.id}, :readonly => true, :as => :hidden %> 
  <%= f.button :submit %>
<% end %>
</div>
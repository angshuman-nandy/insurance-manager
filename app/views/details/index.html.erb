 <% @user = current_user %>
   <% @u_detail = @user.detail %>
<div class="container"  >
  <h2>all users</h2>
  <p>all the available users</p>            
  <table class="table table-hover table-responsive">
    <thead class="thead-inverse">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>email</th>
        <th>user</th>
        <th>contact number</th>
        <th>address</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @details.each do |i| %>
      <tr>
        <td><%=i.first_name%></td>
        <td><%=i.last_name%></td>
        <td><%=i.email%></td>
        <% if i.admin == true %>
          <td>admin</td>
        <% else %>
          <td>customer</td>
        <% end %>
        <td><%=i.contact_number%></td>
        <td><%=i.address%></td>
        <% if @u_detail.admin == true %>

          <td><%= link_to "edit", details_cedit_path(:user_id => i.user_id),:class => "btn btn-primary custom_btn_small" %></td> 
          <td><%= link_to 'Destroy', details_cdestroy_path(:user_id => i.user_id),
              method: :delete,
              data: { confirm: 'Are you sure?' } , :class => "btn btn-primary custom_btn_small"%></td>
              <% if i.admin == false %>
          <td><%= link_to "make admin", details_make_admin_path(:user_id => i.user_id),:class => "btn btn-primary custom_btn_small" %></td>
         <%end%>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>


        
<!DOCTYPE html>
<html>
  <head>
    <title>Insurence Manager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <link href="https://fonts.googleapis.com/css?family=Architects+Daughter|Handlee|Inconsolata|Comfortaa|Titillium+Web|Bilbo|Patrick+Hand+SC|Dosis|Roboto|Indie Flower|Cookie" rel="stylesheet"> 
  </head>

  <body>
   <% flash.each do |key, value| %><div class="flash <%= key %>""><%= value %></div><% end %>
   <div class="container-fluid brand">
   <%= link_to dash_customer_path do %>
        <h1>Insurence Manager</h1>
        <%end%>
        </div>
        <%= render 'layouts/navigation' %>

        <% if (controller.controller_name == "companies" || controller.controller_name == "policies" || controller.controller_name == "details" || controller.controller_name == "poltypes" || controller.action_name == "company_handle" || controller.action_name == "policy_handle" || controller.action_name == "user_handle" || controller.action_name == "poltype_handle") %>
        <%= render 'layouts/action_nav' %>
        <% end %>

  

    <%= yield %>
  </body>
</html>